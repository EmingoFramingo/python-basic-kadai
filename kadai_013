def calculate_total_price(product_price, tax_rate):
    # 商品の金額に消費税を加えて計算
    total_price = product_price * (1 + tax_rate)
    return total_price

# 使用例
product_price = 1000
tax_rate = 0.1
total_price = calculate_total_price(product_price, tax_rate)
print(f"商品の金額: {product_price}円")
print(f"消費税込みの合計金額: {total_price}円")
